<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let list of listings) {%>
      <a href="/listings/<%=list._id%>" class="show-link">
        <div class="listing-card" style="width: 20rem;">
            <img  src="<%= list.image?.url || '/images/default.jpg' %>" class="card-img-top" alt="..." style="height: 20rem;">
            <!-- <div class="card-img-overlay">abcd</div> -->
            <div class="card-body">
              <h5 class="card-title"><strong><%=list.title%></strong></h5>
              <p class="card-text"><%=list.description%></p>
              <p class="card-text">price: &#x20b9 <%=list.price.toLocaleString("en-IN")%> /night</p>
            </div>
        </div>
      </a>
    <%}%>
    </div>
</body>
