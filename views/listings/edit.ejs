<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8">
            <h3>Edit listing</h3>
    <form method="POST" action="/listings/<%= list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="Listing[title]" type="text" value="<%=list.title%>" class="form-control" required> 
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="Listing[description]" id="" type="text" class="form-control" required><%=list.description%></textarea> 
        </div>

        <div>
            <img src="<%= originalImageUrl %>" alt="Current image" class="img-thumbnail">
        </div>


        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="image" id=""  type="file" class="form-control"></input> 
        </div>

        <div class="row"> 
    
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input name="Listing[price]" type="number" value="<%=list.price%>" class="form-control" required>
            </div>
    
            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <input name="Listing[country]" type="text" value="<%=list.country%>" class="form-control" required>
            </div>

        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <textarea name="Listing[location]" id="" class="form-control" required><%=list.location%></textarea>
        </div>

        <button class="btn btn-dark">Edit</button>
    </form>
    </div>
    </div>
</body>
