<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8">
    <form method="POST" action="/listings"  enctype="multipart/form-data">
        <h3>Create New Listing</h3>
 
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="Listing[title]" type="text" placeholder="enter title" class="form-control" required> 
        </div> 
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="Listing[description]" id="" placeholder="about" type="text" class="form-control" required></textarea> 
            <div class="invalid-feedback">Please enter short description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload image</label>
            <input name="image" id="" placeholder="" type="file" class="form-control"></input> 
        </div>

        <div class="row"> 
        <div class="mb-3 col-4" >
            <label for="price" class="form-label">Price</label>
            <input name="Listing[price]"  placeholder="enter price" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price</div>
        </div>

        <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input name="Listing[country]" type="text" placeholder="enter country" class="form-control" required/>
            <div class="invalid-feedback">Country name should be valid</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <textarea name="Listing[location]" id="" placeholder="enter city/state name only" class="form-control" required></textarea>
            <div class="invalid-feedback">location should be valid</div>
        </div>
      <br>
    <button class="btn-danger btn mt-2">ADD</button>
   
    </form>
</div>
</div>
</body>
